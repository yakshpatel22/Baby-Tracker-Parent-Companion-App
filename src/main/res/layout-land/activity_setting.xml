<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/settingstextview"
        android:layout_width="272dp"
        android:layout_height="108dp"
        android:text="@string/SettingsExplation"
        app:layout_constraintBottom_toTopOf="@+id/returntoMainbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:text="@string/SettingsExplation" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="423dp"
        android:layout_height="236dp"
        android:contentDescription="@string/babyInformationDescription"
        app:layout_constraintBottom_toTopOf="@+id/returntoMainbtn"
        app:layout_constraintEnd_toStartOf="@+id/settingstextview"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/informationpageimg"
        tools:srcCompat="@drawable/informationpageimg" />

    <Button
        android:id="@+id/returntoMainbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="onReturnToMain"
        android:text="@string/ReturnMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/ReturnMain" />

</androidx.constraintlayout.widget.ConstraintLayout>
